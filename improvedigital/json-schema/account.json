{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "improvedigital-pbs-account-schema",
  "description": "Improve Digital Prebid Server json schema of account settings",
  "type": "object",
  "required": ["id"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive"]
    },
    "auction": {
      "$ref": "#/definitions/auction-event-config"
    },
    "privacy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ccpa": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "channel-enabled": {
              "$ref": "#/definitions/enabled-for-request-type"
            }
          }
        },
        "gdpr": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "channel-enabled": {
              "$ref": "#/definitions/enabled-for-request-type"
            },
            "purposes": {
              "type": "object",
              "additionalProperties": false,
              "patternProperties": {
                "^p([1-9]|10)$": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "enforce-purpose": {
                      "type": "string",
                      "enum": ["no", "basic", "full"]
                    },
                    "enforce-vendors": {
                      "type": "boolean"
                    },
                    "vendor-exceptions": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "special-features": {
              "type": "object",
              "additionalProperties": false,
              "patternProperties": {
                "^sf[1-2]$": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "enforce": {
                      "type": "boolean"
                    },
                    "vendor-exceptions": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "purpose-one-treatment-interpretation": {
              "type": "string",
              "enum": ["ignore", "no-access-allowed", "access-allowed"]
            },
            "basic-enforcement-vendors": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "analytics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "auction-events": {
          "$ref": "#/definitions/auction-event-config"
        },
        "modules": {
          "$ref": "#/definitions/modules"
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "verbosity-level": {
          "type": "string",
          "enum": ["none", "basic", "detailed"]
        }
      }
    },
    "cookie-sync": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "default-limit": {
          "$ref": "#/definitions/positive_int"
        },
        "max-limit": {
          "$ref": "#/definitions/positive_int"
        },
        "default-coop-sync": {
          "type": "boolean"
        }
      }
    },
    "hooks": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "execution-plan": {
          "$ref": "#/definitions/execution-plan"
        },
        "modules": {
          "$ref": "#/definitions/modules"
        }
      }
    },
    "ext": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "improvedigitalpbs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "headerliftPartnerId": {
              "type": "string"
            },
            "bidPriceAdjustment": {
              "type": "number"
            },
            "bidPriceAdjustmentIncImprove": {
              "type": "boolean"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "positive_int": {
      "type": "integer",
      "minimum": 0
    },
    "enabled-for-request-type": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "web": {
          "type": "boolean"
        },
        "amp": {
          "type": "boolean"
        },
        "app": {
          "type": "boolean"
        },
        "video": {
          "type": "boolean"
        }
      }
    },
    "auction-event-config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "price-granularity": {
          "type": "string",
          "enum": ["low", "med", "high", "auto", "dense", "unknown"]
        },
        "banner-cache-ttl": {
          "$ref": "#/definitions/positive_int"
        },
        "video-cache-ttl": {
          "$ref": "#/definitions/positive_int"
        },
        "truncate-target-attr": {
          "type": "integer",
          "minimum": 1,
          "maximum": 255
        },
        "default-integration": {
          "type": "string",
          "enum": ["web", "app", "amp", "video"]
        },
        "debug-allow": {
          "type": "boolean"
        },
        "bid-validations": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "banner-creative-max-size": {
              "type": "string",
              "enum": ["skip", "warn", "enforce"]
            }
          }
        },
        "events": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        },
        "price-floors": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "fetch": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "url": {
                  "type": "string"
                },
                "timeout-ms": {
                  "$ref": "#/definitions/positive_int"
                },
                "max-file-size-kb": {
                  "$ref": "#/definitions/positive_int"
                },
                "max-rules": {
                  "$ref": "#/definitions/positive_int"
                },
                "max-age-sec": {
                  "$ref": "#/definitions/positive_int"
                },
                "period-sec": {
                  "$ref": "#/definitions/positive_int"
                }
              }
            },
            "enforce-floors-rate": {
              "type": "integer"
            },
            "adjust-for-bid-adjustment": {
              "type": "boolean"
            },
            "enforce-deal-floors": {
              "type": "boolean"
            },
            "use-dynamic-data": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "execution-plan": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "endpoints": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "/openrtb2/auction": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/openrtb2/amp": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/openrtb2/video": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/cookie_sync": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/setuid": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/bidders/params": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/event": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/getuids": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/info/bidders": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/optout": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/status": {
              "$ref": "#/definitions/endpoint-execution-plan"
            },
            "/vtrack": {
              "$ref": "#/definitions/endpoint-execution-plan"
            }
          }
        }
      }
    },
    "endpoint-execution-plan": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "stages": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "entrypoint": {
              "$ref": "#/definitions/stage-execution-plan"
            },
            "raw-auction-request": {
              "$ref": "#/definitions/stage-execution-plan"
            },
            "processed-auction-request": {
              "$ref": "#/definitions/stage-execution-plan"
            },
            "bidder-request": {
              "$ref": "#/definitions/stage-execution-plan"
            },
            "raw-bidder-response": {
              "$ref": "#/definitions/stage-execution-plan"
            },
            "processed-bidder-response": {
              "$ref": "#/definitions/stage-execution-plan"
            },
            "all-processed-bid-responses": {
              "$ref": "#/definitions/stage-execution-plan"
            },
            "auction-response": {
              "$ref": "#/definitions/stage-execution-plan"
            }
          }
        }
      }
    },
    "stage-execution-plan": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "groups": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "timeout": {
                "$ref": "#/definitions/positive_int"
              },
              "hook-sequence": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "module-code": {
                      "type": "string"
                    },
                    "hook-impl-code": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "modules": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        ".+": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
